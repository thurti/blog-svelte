{
  "name": "svelte-app",
  "version": "0.1.0",
  "scripts": {
    "deploy": "rsync --progress -r public/ t3000.uberspace:~/html",
    "build": "rollup -c && npm run sass-build",
    "dev": "rollup -c -w & npm run sass",
    "start": "sirv public --single",
    "sass": "./node_modules/.bin/node-sass --watch --source-map-embed --recursive ./src/scss/style.scss ./public/build/style.css",
    "sass-build": "./node_modules/.bin/node-sass --recursive --output-style compressed ./src/scss/style.scss ./public/build/style.css"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "eslint": "^7.10.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "mathsass": "^0.11.0",
    "modularscale-sass": "^3.0.10",
    "node-sass": "^4.14.1",
    "rollup": "^1.32.1",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-svelte": "^5.2.3",
    "rollup-plugin-terser": "^5.3.1",
    "svelte": "^3.29.0"
  },
  "dependencies": {
    "marked": "^1.2.0",
    "navaid": "^1.1.2",
    "prismjs": "^1.21.0",
    "sirv-cli": "^0.4.6"
  }
}
