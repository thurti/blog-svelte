{
  "name": "svelte-app",
  "version": "0.3.1",
  "scripts": {
    "deploy": "rsync --progress --copy-links -r --exclude '.DS_Store' public/ t3000.uberspace:~/html",
    "build": "rollup -c && npm run sass-build",
    "dev": "rollup -c -w & npm run sass & npm run server",
    "start": "sirv public --single",
    "sass": "sass --watch ./src/scss/style.scss ./public/static/build/style.css",
    "sass-build": "sass ./src/scss/style.scss ./public/static/build/style.css && uglifycss --output ./public/static/build/style.css ./public/static/build/style.css",
    "server": "cd ../blog-server && npm run start"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "eslint": "^7.14.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "mathsass": "^0.11.0",
    "modularscale-sass": "^3.0.10",
    "rollup": "^2.34.1",
    "rollup-plugin-css-only": "^3.0.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.31.0",
    "uglifycss": "^0.0.29"
  },
  "dependencies": {
    "marked": "^1.2.5",
    "navaid": "^1.2.0",
    "prismjs": "^1.22.0",
    "sirv-cli": "^1.0.8",
    "svelte-prism-action": "^1.0.5"
  }
}
